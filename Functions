function playAudio(req)

    if muteIntroAudio(true) then
        return
    end

    if req == "Intro" then
        local Intro = Instance.new("Sound")
        Intro.Name = "Introduction Sound"
        Intro.SoundId = "http://www.roblox.com/asset/?id=1570675466"
        Intro.Volume = 2
        Intro.Looped = false
        Intro.archivable = false
        Intro.Parent = game.Workspace
        Intro:Play()
end
    end
function muteIntroAudio(req)
    if req == true then
        _G.muteAudio = true
    else
        _G.muteAudio = false
    end
end
